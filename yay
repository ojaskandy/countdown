import time
import datetime
from datetime import datetime, timedelta
import os 

while True:

    print("""
          
          --- ivorie countdown timer yay ---
          """)
    current_time = datetime.now()
    print('current time: ' + str(current_time))

    arrival_time = datetime(2023, 7, 28, 17, 35, 00)
    difference = arrival_time - current_time
    print("arrival time: " + str(arrival_time))

    
    print("\nyou arrive in: " + str(difference) + "!!!!!")

    print("wheeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee")

    

    time.sleep(1)

    os.system('cls')
